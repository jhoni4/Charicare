@model Charicare2.Models.AppViewModels.UserFormViewModel

@{
    ViewData["Title"] = "User sign in form";
}




<div class="row FormContainer">
<h2>@ViewData["Title"].</h2>
    <div class="col-md-6 panel panel-success">
        <div class="panel-heading">Please Fillout This Form Before You Begin Donating</div>
        <div class="userForm">
                <form id="clearBtn" asp-controller="User" asp-action="UserCreate" asp-route-id="@Model.DonateTypeId" method="post" class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-horizontal">
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="@Model.User.FullName" class="col-md-2 control-label"></label>
                            <div class="col-md-5">
                                <input asp-for="@Model.User.FullName" class="form-control" />
                                <span asp-validation-for="@Model.User.FullName" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.User.Email" class="col-md-2 control-label"></label>
                            <div class="col-md-5">
                                <input asp-for="@Model.User.Email" class="form-control" />
                                <span asp-validation-for="@Model.User.Email" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.User.Telephone" class="col-md-2 control-label">Phone Number</label>
                            <div class="col-md-5">
                                <input asp-for="@Model.User.Telephone" class="form-control" />
                                <span asp-validation-for="@Model.User.Telephone" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.User.Street" class="col-md-2 control-label"></label>
                            <div class="col-md-5">
                                <input asp-for="@Model.User.Street" class="form-control" />
                                <span asp-validation-for="@Model.User.Street" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.User.City" class="col-md-2 control-label"></label>
                            <div class="col-md-5">
                                <input asp-for="@Model.User.City" class="form-control" />
                                <span asp-validation-for="@Model.User.City" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.User.State" class="col-md-2 control-label"></label>
                            <div class="col-md-5">
                                @Html.DropDownListFor(x => x.User.State, Charicare2.Data.Extentions.GetStatesList(), new { @name = "User.State", @class = "form-control control-label" })
                                <span asp-validation-for="@Model.User.State" class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-5">
                                <input type="submit" value="Create" class="btn btn-primary" onclick="document.clearBtn.reset();" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    <div class="col-lg-6">
        <div>
            <img src="~/images/old1.jpg" alt="old people" />
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
