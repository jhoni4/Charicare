@model Charicare2.Models.AppViewModels.DonateMedicalIndexViewModel

@{
    ViewData["Title"] = "Donate Medical supplies";
    ViewData["Mssage"] = "Your donations to The ChariCare,  help transform lives! It is financial contributions that make it possible for The Bowery Mission, Mont Lawn Camp and Mont Lawn City Camp to provide help and hope to the homeless and poor in Nashville City. ";
}

<div id="MedicalPage">
    <div class="">
        <img src="~/images/med4.jpg" alt="Medical" width="1250" />
    </div>
    <div class="panel-body">
        <p>@ViewData["Message"]</p>
    </div>
    <div class="panel panel-success">
        <div class="CustomerForm panel-body row">
            @*<h2>@ViewData["Title"]</h2>*@
            <div>Please Fillout This Form</div>
            <div class="col-md-7">
                <form asp-controller="Donate" asp-action="DonateCreate">
                    @{Html.RenderPartial("_DonateForm");}
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-5">
                            <input type="submit" value="Submit" class="btn btn-primary" onclick="document.clearBtn.reset();" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-4">
                <img src="~/images/med2.jpg" alt="med pic" width="400" />
            </div>
        </div>
    </div>
</div>
    <a asp-action="Index">Back to Home</a>
